<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="Fragments.LoginFragment">

    <com.example.loudalarm.View.InputField
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:inputType="textEmailAddress"
        app:title="Email address" />

    <com.example.loudalarm.View.InputField
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:inputType="textPassword"
        app:title="Password" />

    <Button
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="Забыл пароль?"
        android:background="@color/null_color"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:textColor="@color/main_text_and_icons_color" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textColor="@color/main_text_and_icons_color"
        android:textSize="18sp">

        <View
            android:id="@+id/line0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_text_and_icons_color"
            android:fontFamily="sans-serif" />

        <Button
            android:id="@+id/button_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line0"
            android:layout_centerInParent="true"
            android:background="@color/null_color"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="@color/main_text_and_icons_color"

            android:text="Войти"
            android:textAllCaps="true" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/button_enter"
            android:background="@color/main_text_and_icons_color"
            android:fontFamily="sans-serif" />
    </RelativeLayout>
</LinearLayout>
