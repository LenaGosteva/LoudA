<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_game"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="30dp">

    <RelativeLayout
        android:id="@+id/rel_in_games_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">

        <LinearLayout
            android:id="@+id/linear_in_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rel_in_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line0"
                android:layout_alignParentStart="false"
                android:layout_marginVertical="10dp">

                <TextView
                    android:id="@+id/name_of_game"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/null_color"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="left"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/main_text_and_icons_color"
                    android:textFontWeight="300"
                    android:textSize="15dp" />


            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/linear_in_1"
            android:background="@color/main_text_and_icons_color" />
    </RelativeLayout>
</RelativeLayout>