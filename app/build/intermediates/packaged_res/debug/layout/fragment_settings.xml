<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".Fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineAmbientShadowColor="@color/null_color"
        android:outlineSpotShadowColor="@color/null_color"
        android:paddingHorizontal="20dp"
        android:scrollIndicators="right"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:hint="НАСТРОЙКИ"
                android:textColorHint="@color/main_text_and_icons_color"
                android:textSize="30dp" />


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginTop="10dp">

                <View
                    android:id="@+id/line0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_text_and_icons_color" />

                <LinearLayout
                    android:id="@+id/linear_in_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/icon_melody" />

                    <RelativeLayout
                        android:id="@+id/rel_in_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line0"
                        android:layout_alignParentStart="false"
                        android:layout_marginVertical="10dp">


                        <android.widget.Button
                            android:id="@+id/ringtone"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/null_color"
                            android:fontFamily="sans-serif-thin"
                            android:gravity="center_vertical"
                            android:text="Мелодия по умолчанию"
                            android:textAllCaps="true"
                            android:textFontWeight="300"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/nameOfCheckedMusic"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/ringtone"
                            android:layout_marginBottom="3dp"
                            android:gravity="center_vertical"
                            android:text="path of music"
                            android:textSize="15dp"
                            tools:hint="dfghjnbhjkkjhg" />


                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/linear_in_1"
                    android:background="@color/main_text_and_icons_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignTop="@id/rel1">

                <LinearLayout
                    android:id="@+id/linear_in_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/icon_change_theme" />

                    <RelativeLayout
                        android:id="@+id/rel2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp">

                        <android.widget.Button
                            android:id="@+id/change_theme"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@color/null_color"
                            android:fontFamily="sans-serif-thin"
                            android:gravity="center_vertical"
                            android:text="Изменить фон"
                            android:textAllCaps="true"
                            android:textFontWeight="300"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/name_of_changed_theme"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@+id/change_theme"
                            android:layout_marginBottom="3dp"
                            android:gravity="center_vertical"
                            android:text="name of theme"
                            android:textSize="15dp"
                            tools:hint="dfghjnbhjkkjhg" />


                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:id="@+id/line2_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/linear_in_2"
                    android:background="@color/main_text_and_icons_color" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rel2"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:hint="ИНФОРМАЦИЯ"
                    android:textColorHint="@color/main_text_and_icons_color"
                    android:textSize="30dp" />

                <LinearLayout
                    android:id="@+id/FAQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/info"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="sans-serif-thin"
                        android:text="Правила игр"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="always"
                        android:scrollbars="vertical"
                        android:text="@string/FAQ_for_game"

                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/FAQ"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-thin"
                        android:text="Список игр"
                        android:textSize="20dp" />

                    <View
                        android:id="@+id/line9090"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="30dp"
                        android:background="@color/main_text_and_icons_color" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/games_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="20dp"
                        app:layoutManager="LinearLayoutManager" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>