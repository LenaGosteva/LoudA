<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/main_navigation_panel_color_full"
        app:cardElevation="14dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/linear_edit"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:fontFamily="sans-serif"
                android:text="Изменение имени профиля"
                android:textColor="@color/main_text_and_icons_color"
                android:textSize="18dp" />



            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:clickable="true"
                tools:text="Unknown"
                android:textColor="@color/main_text_and_icons_color"
                android:textSize="18dp" />

        </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_below="@id/linear_edit"
                android:clickable="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/main_text_and_icons_color"
                android:textSize="18sp">


                <View
                    android:id="@+id/line0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_text_and_icons_color"
                    android:fontFamily="sans-serif" />
                <LinearLayout
                    android:id="@+id/layout_ok_not"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="40dp">
                    <Button
                        android:id="@+id/button_not"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line0"
                        android:layout_centerInParent="true"
                        android:background="@color/null_color"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Закрыть"
                        android:textAllCaps="true"
                        android:textColor="@color/main_text_and_icons_color" />
                    <Button
                        android:id="@+id/button_ok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line0"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@color/null_color"
                        android:fontFamily="sans-serif"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Готово"
                        android:textAllCaps="true"
                        android:textColor="@color/main_text_and_icons_color" />


                </LinearLayout>
                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/layout_ok_not"
                    android:background="@color/main_text_and_icons_color"
                    android:fontFamily="sans-serif" />
            </RelativeLayout></RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>