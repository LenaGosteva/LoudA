<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="50dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/cancel" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_of_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/cancel"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/circle_profile"
            android:clickable="true"
            android:src="@drawable/kitty"
            app:cornerRadius="75dp" />

        <ImageButton
            android:id="@+id/button_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/cancel"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/null_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_of_profile"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_of_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:textColor="@color/main_text_and_icons_color"
                android:textSize="20dp"
                android:text="Linda Grey"

                />

            <ImageButton
                android:id="@+id/edit_name"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_edit" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="@color/main_text_and_icons_color"
            android:textSize="18sp">

            <View
                android:id="@+id/line0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_text_and_icons_color"
                android:fontFamily="sans-serif" />

            <Button
                android:id="@+id/outAuth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line0"
                android:layout_centerInParent="true"
                android:background="@color/null_color"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Выйти"
                android:textAllCaps="true" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/outAuth"
                android:background="@color/main_text_and_icons_color"
                android:fontFamily="sans-serif" />
        </RelativeLayout>
    </RelativeLayout>


</FrameLayout>