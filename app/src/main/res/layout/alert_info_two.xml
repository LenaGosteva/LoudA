<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="0dp"
        android:layout_weight="1"
        android:backgroundTint="@color/main_text_and_icons_color"
        app:cardElevation="14dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:fontFamily="sans-serif"
                    android:text="Изменение имени профиля"
                    android:textColor="@color/black"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    tools:text="Unknown" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_edit"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/black">


                <!--                <View-->
                <!--                    android:id="@+id/line0"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="1dp"-->
                <!--                    android:background="@color/black"-->
                <!--                    android:fontFamily="sans-serif" />-->

                <LinearLayout
                    android:id="@+id/layout_ok_not"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2" />

                    <Button
                        android:id="@+id/button_not"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line0"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:background="@color/null_color"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Закрыть"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/button_ok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line0"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:background="@color/null_color"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="ок"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="12dp" />


                </LinearLayout>

                <!--                <View-->
                <!--                    android:id="@+id/line2"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="1dp"-->
                <!--                    android:layout_below="@id/layout_ok_not"-->
                <!--                    android:background="@color/black"-->
                <!--                    android:fontFamily="sans-serif" />-->
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>